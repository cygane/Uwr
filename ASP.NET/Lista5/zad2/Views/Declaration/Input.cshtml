@model zad2.Models.DeclarationModel

<h2>InputView</h2>

@using(var form = Html.BeginForm())
{
    @Html.LabelFor(m => m.Name)
    @Html.TextBoxFor(m => m.Name)
    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

    <br />

    @Html.LabelFor(m => m.Course)
    @Html.TextBoxFor(m => m.Course)
    @Html.ValidationMessageFor(m => m.Course, "", new { @class = "text-danger" })


    <br />

    @Html.LabelFor(m => m.List)
    @Html.TextBoxFor(m => m.List)

    <br />


    for(int i = 0; i < Model.Points.Length; i++)
    {

        @Html.LabelFor(m => m.Points[i])
        @Html.TextBoxFor(m => m.Points[i])
        <br />
    }

    <button>Wygeneruj</button>
}
